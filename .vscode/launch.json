    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "echo-bot",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/test-bots/echo-bot/src/index.ts",
            "outFiles": [
                "${workspaceFolder}/**/dist/**/*.js"
            ],
            "preLaunchTask": "build_echo",
            "envFile": "${workspaceFolder}/test-bots/echo-bot/.env",
            "console": "integratedTerminal",
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "copilotstudio-console",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/test-bots/copilotstudio-console/src/index.ts",
            "outFiles": [
                "${workspaceFolder}/**/dist/**/*.js"
            ],
            "preLaunchTask": "build_copilot_client",
            "envFile": "${workspaceFolder}/test-bots/copilotstudio-console/.env",
            "console": "integratedTerminal"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "web-chat",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/test-bots/web-chat/src/index.ts",
            "outFiles": [
                "${workspaceFolder}/**/dist/**/*.js"
            ],
            "preLaunchTask": "build_webchat",
            "envFile": "${workspaceFolder}/test-bots/web-chat/.env",
            "console": "integratedTerminal"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "state-bot",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/test-bots/state-bot/src/index.ts",
            "outFiles": [
                "${workspaceFolder}/**/dist/**/*.js"
            ],
            "preLaunchTask": "build_state",
            "envFile": "${workspaceFolder}/test-bots/state-bot/.env",
            "console": "integratedTerminal",
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "teams-bot",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/test-bots/teams-bots/src/index.ts",
            "outFiles": [
                "${workspaceFolder}/**/dist/**/*.js"
            ],
            "preLaunchTask": "build_teams",
            "envFile": "${workspaceFolder}/test-bots/teams-bots/.env",
            "console": "integratedTerminal",
            "internalConsoleOptions": "openOnSessionStart"
        }
    ]
}