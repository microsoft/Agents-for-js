{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "echo-bot",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/samples/echo-bot/src/index.ts",
            "outFiles": [
                "${workspaceFolder}/**/dist/**/*.js"
            ],
            "preLaunchTask": "build_echo",
            "envFile": "${workspaceFolder}/samples/echo-bot/.env",
            "console": "integratedTerminal",
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "copilotstudio-console",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/samples/copilotstudio-console/src/index.ts",
            "outFiles": [
                "${workspaceFolder}/**/dist/**/*.js"
            ],
            "preLaunchTask": "build_copilot_client_sample",
            "envFile": "${workspaceFolder}/samples/copilotstudio-console/.env",
            "console": "integratedTerminal"
        }
    ]
}