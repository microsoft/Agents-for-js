{
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "type": "AdaptiveCard",
    "version": "1.4",
    "body": [
        {
            "type": "TextBlock",
            "text": "${title}",
            "weight": "Bolder",
            "size": "Medium"
        },
        {
            "type": "TextBlock",
            "text": "${url}"
        }
    ],
    "actions": [
        {
            "type": "Action.OpenUrl",
            "title": "View Pull Request",
            "url": "${url}"
        }
    ]
}